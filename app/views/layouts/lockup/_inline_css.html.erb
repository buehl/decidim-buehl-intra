body {
  text-align: center;
  padding: 150px;
  font: 30px Helvetica, sans-serif; 
  color: #263238; 
  background-color: #fff}
h1 {
  margin-top: 20px;
  margin-bottom: 20px;
  width: 100%;
  font-size: 50px;
  line-height: 70px;
}
form input[type='password'] {
  display: block;
  margin: 0 auto;
  padding: 16px;
  width: 200px;
  color: #263238;
  font: 30px Helvetica, sans-serif;
  background-color: #eceff1;
  border: none;
  -webkit-appearance: none;
  outline: none;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
form input[type='password'].nope {
  border-color: #af4448;
  background-color: #e57373;
}
form button {
  display: block;
  margin: 0 auto;
  padding: 6px 16px 6px 16px;
  width: 232px;
  color: #fff;
  font: 30px Helvetica, sans-serif;
  background-color: #5288db;
  border: 0;
  cursor: pointer;
  -webkit-appearance: none;
  outline: none;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
.hmm h3 {
  display: block;
  margin: 0 auto;
  padding: 6px;
  width: 400px;
  color: #af4448;
  background-color: #e57373;
}